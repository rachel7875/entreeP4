<header>

  <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <div id="navbarLogoBrand">
      <a class="navbar-text " id="logo" href="{{path('oc_core_homepage') }}">
      <img src={{ absolute_url(asset('images/jocondebis.png')) }} alt={{ 'navbar.logoAlt'|trans }}/></a>
      <a class="navbar-brand" id="brand"  href="{{path('oc_core_homepage') }}">{{ 'navbar.brand'|trans }}  </a>
    </div>

    <div id="hamburgerMenu">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" 
      aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
      </button>
    </div>  

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <a class="nav-link" href="{{path('oc_core_homepage') }}"> {{ 'navbar.home'|trans }} <span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="{{ path('oc_core_add') }}"> {{ 'navbar.tickets'|trans }} </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="https://www.ticketlouvre.fr/louvre/b2c/index.cfm/contacts"> {{ 'navbar.contact'|trans }} </a>
        </li>
      </ul>
      <div id="louvreWebsite"> <a  href="https://www.louvre.fr/accueil"> {{ 'navbar.accessMuseumSite'|trans }} </a></div> 
    </div>
    
    <div class="nav navbar-nav my-2 my-lg-0" id="navbarButtons">
      <a class="btn btn-danger btn-xs navbar-btn" href="https://www.louvre.fr/accueil"> {{ 'navbar.accessMuseumSite'|trans }} </a>
        {% if (app.request.getLocale()) == 'fr' %}
        <div class="dropdown">
          <button type="button" class="btn btn-outline-secondary  dropdown-toggle" data-toggle="dropdown"  aria-haspopup="true" 
          aria-expanded="false">{{ 'navbar.language'|trans }} <span class="caret"></span></button>
          <div class="dropdown-menu" role="menu" aria-labelledby="dropdownMenuButton">
            <a class="dropdown-item active" href="#">Français</a>
            <a class="dropdown-item" href="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge({'_locale': 'en'})) }}">
            English</a>
          </div>
        </div>
      {% endif %}
      {% if (app.request.getLocale()) == 'en' %}
        <div class="dropdown">
          <button type="button" class="btn btn-outline-secondary  dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" 
          aria-expanded="false">{{ 'navbar.language'|trans }} <span class="caret"></span></button>
          <div class="dropdown-menu" role="menu" aria-labelledby="dropdownMenuButton">
            <a class="dropdown-item " href="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge({'_locale': 'fr'})) }}">
            Français</a>
            <a class="dropdown-item active" href="#">English</a>
          </div>
        </div>
      {% endif %}
    </div>

  </nav>
  



</header>
 </div>

  <div >
    {{ form_rest(form) }}
  </div>
  
  {# Buttons at the end  #}
  <button type="button" class="btn btn-default">{{ 'button.cancel'|trans }}</button>
  <button type="button" class="btn btn-default">{{ 'button.previous'|trans }}</button>
  <input type="submit" value={{ 'button.next'|trans }} class="pull-right" />


  {{ form_end(form) }}
</div>
        


<div class="well">
  {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

  {# The general errors of the form#}
  {{ form_errors(form) }}

  {# The generalTermsAcceptance field#}
  <div class="form-group">
    {{ form_widget(form.generalTermsAcceptance, {'attr': {'class': 'form-control'}}) }}
    <label for="">{{ 'label.generalTermsAcceptance'|trans }}</label>
     <a href="https://www.ticketlouvre.fr/louvre/b2c/index.cfm/CGV">{{ 'formrecap.generalTermsAcceptance'|trans }}</a> </p> 

<div class="well">
  {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

  {# The general errors of the form#}
  {{ form_errors(form) }}

  {# The generalTermsAcceptance field#}
  <div class="form-group generalTermsAcceptance">
    {{ form_widget(form.generalTermsAcceptance, {'attr': {'class': 'form-control'}}) }}
    <label for="">{{ 'label.generalTermsAcceptance'|trans }}</label>
     <a href="https://www.ticketlouvre.fr/louvre/b2c/index.cfm/CGV">{{ 'formrecap.generalTermsAcceptance'|trans }}</a> </p> 
    {{ form_errors(form.generalTermsAcceptance) }}
 </div>

  <div >
    {{ form_rest(form) }}
  </div>
  
  {# Buttons at the end  #}

 <section class="endButtons">
    <a class="btn btn-outline-danger cancelButton" href="{{path('oc_core_homepage') }}" >{{ 'button.cancel'|trans }}</a>
    <button type="submit" class="btn btn-outline-success pull-right nextButton">{{ 'button.next'|trans }}  </button>
  </section>
  {{ form_end(form) }}
</div>
        


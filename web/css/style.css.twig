    }

/*STYLE FOR THE FOOTER*/
.footer{
    position: absolute;
    bottom: 0px;
    left: 0px;
    right: 0px;
    background-color: #222;
    height: 120px;
    padding-top: 20px;
    color : #DB6E71;
    font-size: 0.75em;
}

